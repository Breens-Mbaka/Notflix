<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_logo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/logo_n"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/textView_no_favorites"
        app:layout_constraintEnd_toEndOf="@id/textView_no_favorites"
        app:layout_constraintStart_toStartOf="@id/textView_no_favorites"
        app:tint="@color/grey" />

    <TextView
        android:id="@+id/textView_no_favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/no_favorites_saved"
        android:textColor="@color/grey"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>